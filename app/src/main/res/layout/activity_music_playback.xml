<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Music 1 Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/music1Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Philosophy Music"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/playButton1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_play" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Progress SeekBar for Music 1 -->
    <SeekBar
        android:id="@+id/progressBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

    <!-- Music 2 Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/music2Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jamini Music"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/playButton2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_play" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Progress SeekBar for Music 2 -->
    <SeekBar
        android:id="@+id/progressBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

    <!-- Music 3 Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/music3Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Anapaan Music"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/playButton3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_play" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Progress SeekBar for Music 3 -->
    <SeekBar
        android:id="@+id/progressBar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

    <!-- Music 4 Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/music4Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yognidra Music"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/playButton4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_play" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Progress SeekBar for Music 4 -->
    <SeekBar
        android:id="@+id/progressBar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

</LinearLayout>
